{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"allowJs": true,
		"checkJs": false,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "./dist",
		"removeComments": true,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
		"strictPropertyInitialization": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
    "downlevelIteration": true,
		"typeRoots": [
			"types",
			"node_modules/@types"
		],
	},
	"exclude": ["test"],
	"include": ["src"]
}
